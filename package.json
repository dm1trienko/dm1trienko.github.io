    "html-validate": "^9.5.5",
    "markdown-it": "^14.1.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^6.3.5",
    "workbox-cli": "^7.3.0"
